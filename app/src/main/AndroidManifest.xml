<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lu.shaode.buyerrescue" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".util.BuyerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.ActMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ActRegister"
            android:label="@string/title_activity_act_register" >
        </activity>
        <activity
            android:name=".ui.ActLogin"
            android:label="@string/title_activity_act_login" >
        </activity>
        <activity
            android:name=".ui.ActCategory"
            android:label="@string/title_activity_act_category" >
        </activity>
        <activity
            android:name=".ui.ActGoodsList"
            android:label="@string/title_activity_act_goods_list" >
        </activity>
        <activity
            android:name=".ui.ActGoodDetail"
            android:label="@string/title_activity_act_good_detail" >
        </activity>
        <activity
            android:name=".ui.ActOrderDetail"
            android:label="@string/title_activity_act_order_detail" >
        </activity>
        <activity
            android:name=".ui.ActAppraise"
            android:label="@string/title_activity_act_appraise" >
        </activity>
        <activity
            android:name=".ui.ActAppraiseList"
            android:label="@string/title_activity_act_appraise_list" >
        </activity>
        <activity
            android:name=".ui.ActSearch"
            android:label="@string/title_activity_act_search" >
        </activity>
        <activity
            android:name=".ui.ActAddressManage"
            android:label="@string/title_activity_act_address_manage" >
        </activity>
        <activity
            android:name=".ui.ActAddressNew"
            android:label="@string/title_activity_act_address_new" >
        </activity>
        <activity
            android:name=".ui.ActAddressChoose"
            android:label="@string/title_activity_act_address_choose" >
        </activity>
        <activity
            android:name=".ui.ActOrderVerify"
            android:label="@string/title_activity_act_order_verify" >
        </activity>
    </application>

</manifest>
