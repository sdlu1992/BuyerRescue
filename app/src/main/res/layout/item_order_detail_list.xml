<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/item_order_image"
        android:layout_margin="3dip"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_order_price"
        android:text="145"
        android:textSize="17dip"
        android:textColor="@color/grey_deep"
        android:layout_marginRight="10dip"
        android:layout_alignTop="@+id/item_order_title"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_order_count"
        android:text="x1"
        android:textSize="13dip"
        android:textColor="@color/grey"
        android:layout_marginRight="10dip"
        android:layout_below="@id/item_order_price"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_order_title"
        android:layout_toRightOf="@+id/item_order_image"
        android:layout_toLeftOf="@+id/item_order_price"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:text="hello"
        />

    <View
        android:id="@+id/item_order_line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_order_image"
        android:background="@color/grey_light"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        />
    <TextView
        android:id="@+id/item_order_store"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/item_order_line1"
        android:text="store"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_order_store_phone"
        android:layout_alignTop="@+id/item_order_store"
        android:text="180"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/item_order_line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_order_store_phone"
        android:layout_marginTop="5dip"
        android:background="@color/grey_light"
        />
</RelativeLayout>