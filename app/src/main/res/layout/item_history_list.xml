<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/item_history_image"
        android:layout_margin="3dip"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_history_price"
        android:text="145"
        android:textSize="17dip"
        android:textColor="@color/grey_deep"
        android:layout_marginRight="10dip"
        android:layout_alignTop="@+id/item_history_title"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_history_count"
        android:text="x1"
        android:textSize="13dip"
        android:textColor="@color/grey"
        android:layout_marginRight="10dip"
        android:layout_below="@id/item_history_title"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_history_title"
        android:layout_toRightOf="@+id/item_history_image"
        android:layout_toLeftOf="@+id/item_history_price"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:text="hello"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_history_state"
        android:text="未付款"
        android:textSize="17dip"
        android:textColor="@color/red_light"
        android:layout_marginRight="10dip"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_history_image"
        />

    <View
        android:id="@+id/item_history_line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_history_image"
        android:background="@color/grey_light"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        />

    <RelativeLayout
        android:layout_below="@+id/item_history_line1"
        android:layout_marginBottom="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/ButtonStyleOrangeStroke"
            android:id="@+id/item_history_button"
            android:text="@string/pay_now"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:visibility="gone"
            />

        <Button
            style="@style/ButtonStyleGreyStroke"
            android:id="@+id/item_history_bt_refund"
            android:text="@string/apply_refund"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/item_history_button"
            android:visibility="gone"
            />
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_history_price_total"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:text="145"
            android:textSize="17dip"
            android:textColor="@color/grey_deep"
            />
        </RelativeLayout>
</RelativeLayout>