<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/item_address_check"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_deep"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:textSize="18dip"
        android:text="text"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/item_address_phone"
        android:textColor="@color/grey_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/item_address_name"
        android:layout_toLeftOf="@+id/item_address_check"
        android:text="text"
        android:layout_alignBottom="@+id/item_address_name"
        android:layout_alignTop="@+id/item_address_name"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/item_address_detail"
        android:text="text"
        android:layout_marginTop="5dip"
        android:layout_alignLeft="@+id/item_address_name"
        android:layout_marginBottom="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_address_name"/>
</RelativeLayout>