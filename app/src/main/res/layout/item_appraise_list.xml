<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingBottom="16dip"
    android:paddingTop="16dip"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_appraise_username"
        android:textColor="@color/grey_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_appraise_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/orange"
        android:layout_alignBottom="@+id/item_appraise_username"
        android:text="hello"/>

    <View
        android:id="@+id/item_appraise_line1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_below="@id/item_appraise_username"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_appraise_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dip"
        android:textSize="17dip"
        android:textColor="@color/black"
        android:layout_below="@id/item_appraise_line1"
        android:text="hello"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_appraise_date"
        android:textSize="14dip"
        android:text="hello"
        android:textColor="@color/grey_light"
        android:layout_marginRight="10dip"
        android:layout_alignLeft="@+id/item_appraise_content"
        android:layout_below="@id/item_appraise_content"
        />

</RelativeLayout>