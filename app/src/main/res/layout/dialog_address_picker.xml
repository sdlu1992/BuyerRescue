<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <lu.shaode.buyerrescue.ui.WheelView
            android:id="@+id/dialog_address_wheel_province"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </lu.shaode.buyerrescue.ui.WheelView>
        <lu.shaode.buyerrescue.ui.WheelView
            android:id="@+id/dialog_address_wheel_city"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </lu.shaode.buyerrescue.ui.WheelView>
        <lu.shaode.buyerrescue.ui.WheelView
            android:id="@+id/dialog_address_wheel_county"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </lu.shaode.buyerrescue.ui.WheelView>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dialog_np_cancel"
            style="@style/CancelButtonStyle"
            android:text="@string/cancel"
            />
        <Button
            android:id="@+id/dialog_np_ok"
            style="@style/OkButtonStyle"
            android:text="@string/ok"
            android:layout_marginLeft="30dip"
            />
        </LinearLayout>
</LinearLayout>